<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvHelp_FS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_help_grey"
            android:drawablePadding="20dp"
            android:text="@string/action_help"
            android:textColor="@android:color/black"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:background="@drawable/settings_textview_slector"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@android:color/black" />


        <TextView
            android:id="@+id/tvOverWatchAppz_FS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_info_grey"
            android:drawablePadding="20dp"
            android:text="@string/action_over_watchappz"
            android:textColor="@android:color/black"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:background="@drawable/settings_textview_slector"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@android:color/black" />

        <RadioGroup
            android:id="@+id/rgSorting_FS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/sound">

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/rbSortMostUsed_FS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:checked="true"
                android:button="@null"
                android:drawableLeft="@drawable/ic_stripes"
                android:drawablePadding="20dp"
                android:drawableRight="@android:drawable/btn_radio"
                android:text="@string/app_sorts_gebruikt"
                style="@style/ColorRadioButtonStyle"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@android:color/black" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/rbSortingData_FS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:button="@null"
                android:drawableLeft="@drawable/ic_stripes"
                android:drawablePadding="20dp"
                android:drawableRight="@android:drawable/btn_radio"
                android:text="@string/app_sorts_data"
                style="@style/ColorRadioButtonStyle"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@android:color/black" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/rbSortingLowestUsege_FS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:button="@null"
                android:drawableLeft="@drawable/ic_stripes"
                android:drawablePadding="20dp"
                android:drawableRight="@android:drawable/btn_radio"
                android:text="@string/app_sorts_minste_gebruikt"
                style="@style/ColorRadioButtonStyle"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@android:color/black" />

        </RadioGroup>

    </LinearLayout>
</LinearLayout>